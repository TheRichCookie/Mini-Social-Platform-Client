{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "hangout-app": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss",
                    "flat": false,
                    "skipTests": true,
                    "type": "component"
                },
                "@schematics/angular:class": {
                    "skipTests": true
                },
                "@schematics/angular:directive": {
                    "skipTests": true
                },
                "@schematics/angular:guard": {
                    "skipTests": true
                },
                "@schematics/angular:interceptor": {
                    "skipTests": true
                },
                "@schematics/angular:pipe": {
                    "skipTests": true
                },
                "@schematics/angular:resolver": {
                    "skipTests": true
                },
                "@schematics/angular:service": {
                    "skipTests": true
                }
            },
            "root": "projects/hangout-app",
            "sourceRoot": "projects/hangout-app/src",
            "prefix": "hang",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "options": {
                        "outputPath": "dist/hangout-app",
                        "index": "projects/hangout-app/src/index.html",
                        "browser": "projects/hangout-app/src/main.ts",
                        "polyfills": ["zone.js"],
                        "tsConfig": "projects/hangout-app/tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            {
                                "glob": "**/*",
                                "input": "projects/hangout-app/public"
                            }
                        ],
                        "stylePreprocessorOptions": {
                            "includePaths": ["projects/ui-kit/core/assets/styles/index.scss"]
                        },
                        "styles": ["projects/ui-kit/core/assets/styles/index.scss"],
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kB",
                                    "maximumError": "1MB"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "4kB",
                                    "maximumError": "8kB"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "buildTarget": "hangout-app:build:production"
                        },
                        "development": {
                            "buildTarget": "hangout-app:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "polyfills": ["zone.js", "zone.js/testing"],
                        "tsConfig": "projects/hangout-app/tsconfig.spec.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            {
                                "glob": "**/*",
                                "input": "projects/hangout-app/public"
                            }
                        ],
                        "styles": [
                            "projects/hangout-app/src/styles.scss",
                            "projects/baman/ui-kit/assets/styles/index.scss"
                        ],
                        "scripts": []
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["projects/hangout-app/**/*.ts", "projects/hangout-app/**/*.html"],
                        "eslintConfig": "projects/hangout-app/eslint.config.mjs"
                    }
                }
            }
        },
        "@ui-kit/core": {
            "projectType": "library",
            "root": "projects/ui-kit/core",
            "sourceRoot": "projects/ui-kit/core",
            "prefix": "uk",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss",
                    "flat": false,
                    "skipTests": true,
                    "type": "component"
                },
                "@schematics/angular:class": {
                    "skipTests": true
                },
                "@schematics/angular:directive": {
                    "skipTests": true
                },
                "@schematics/angular:guard": {
                    "skipTests": true
                },
                "@schematics/angular:interceptor": {
                    "skipTests": true
                },
                "@schematics/angular:pipe": {
                    "skipTests": true
                },
                "@schematics/angular:resolver": {
                    "skipTests": true
                },
                "@schematics/angular:service": {
                    "skipTests": true
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular/build:ng-packagr",
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/ui-kit/core/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/ui-kit/core/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular/build:karma",
                    "options": {
                        "tsConfig": "projects/ui-kit/core/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["projects/ui-kit/core/**/*.ts", "projects/ui-kit/core/**/*.html"],
                        "eslintConfig": "projects/ui-kit/core/eslint.config.mjs"
                    }
                }
            }
        }
    }
}
